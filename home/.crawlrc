name = 4rkd35
remember_name = true
species += Minotaur
background += Berserker
weapon = hand axe
game_seed = 4rkd3

default_manual_training = true
autopickup_starting_ammo = true
tile_show_threat_levels += trivial, easy, tough, nasty

# include
autopickup_exceptions += <dart, <shield, <cloak, <javelin, <gloves, <boots, <boomerangs

# exclude
autopickup_exceptions += >inaccuracy, >immolation, >uselessness, >noise, >torment, >stone, >wand

# travel
show_travel_trail = true
travel_delay = 1
travel_avoid_terrain = (shallow water | deep water)
explore_stop -= stairs, altars, items
explore_stop += artefacts

# autofight
autofight_throw = true
autofight_throw_nomove = true
autofight_stop = 75

# inscriptions
autoinscribe += of identify:@r1
autoinscribe += of teleportation:@r2
autoinscribe += of blinking:@r3
